<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="color_line">@color/color_line_dark_gray</item>
        <item name="color_text">@color/colorWhite</item>
    </style>
    <style name="DarkTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="color_line">@color/color_line_light_gray</item>
        <item name="color_text">@color/colorWhite</item>
    </style>
    <style name="LightTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="color_text">@color/color_text_primary_DarkTheme</item>
        <item name="colorPrimary">@color/colorPrimaryLightTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkLightTheme</item>
        <item name="colorAccent">@color/colorAccentLightTheme</item>
        <item name="color_line">@color/color_line_dark_gray</item>
    </style>



</resources>
